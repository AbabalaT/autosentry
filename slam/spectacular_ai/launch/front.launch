<?xml version="1.0"?>
<launch>
    <arg name="camera_model"         default="OAK-D-PRO"       />
    <arg name="enableRviz"           default="true"            />
    <arg name="tf_prefix"            default="oak_front"       />
    <arg name="base_frame"           default="oak-front-frame" />
    <arg name="parent_frame"         default="base_link"       />

    <arg name="cam_pos_x"             default="0.0" /> <!-- Position respect to base frame (i.e. "base_link) -->
    <arg name="cam_pos_y"             default="0.0" /> <!-- Position respect to base frame (i.e. "base_link) -->
    <arg name="cam_pos_z"             default="0.0" /> <!-- Position respect to base frame (i.e. "base_link) -->
    <arg name="cam_roll"              default="0.0" /> <!-- Orientation respect to base frame (i.e. "base_link) -->
    <arg name="cam_pitch"             default="0.0" /> <!-- Orientation respect to base frame (i.e. "base_link) -->
    <arg name="cam_yaw"               default="0.0" /> <!-- Orientation respect to base frame (i.e. "base_link) -->

    <include file="$(find spectacular_ai)/launch/urdf.launch">
        <arg name="base_frame"      value="$(arg  base_frame)"  />
        <arg name="parent_frame"    value="$(arg  parent_frame)"/>
        <arg name="camera_model"    value="$(arg  camera_model)"/>
        <arg name="tf_prefix"       value="$(arg  tf_prefix)" />
        <arg name="cam_pos_x"       value="$(arg  cam_pos_x)"   />
        <arg name="cam_pos_y"       value="$(arg  cam_pos_y)"   />
        <arg name="cam_pos_z"       value="$(arg  cam_pos_z)"   />
        <arg name="cam_roll"        value="$(arg  cam_roll)"    />
        <arg name="cam_pitch"       value="$(arg  cam_pitch)"   />
        <arg name="cam_yaw"         value="$(arg  cam_yaw)"     />
    </include>

    <node pkg="spectacular_ai" type="spectacular_ai_node" name="front" output="screen"/>

    <node pkg="nodelet" type="nodelet" name="$(arg tf_prefix)_nodelet_manager"  args="manager" output="screen"/>

    <node pkg="nodelet" type="nodelet" name="$(arg tf_prefix)_depth_image_convertion_nodelet"
          args="load depth_image_proc/convert_metric $(arg tf_prefix)_nodelet_manager">
        <remap from="image_raw" to="/front/depth"/>
        <remap from="image" to="/front/depth/image"/>
    </node>

    <node pkg="nodelet" type="nodelet" name="$(arg tf_prefix)_depth_image_to_pointcloud"
          args="load depth_image_proc/point_cloud_xyz $(arg tf_prefix)_nodelet_manager">
        <remap from="camera_info" to="/front/depth/camera_info"/>
        <remap from="image_rect" to="/front/depth/image"/>
        <remap from="points" to="/front/points"/>
    </node>

    <group if="$(eval arg('enableRviz') == true)">
        <node name="rviz" pkg="rviz" type="rviz" args="-d $(find spectacular_ai)/rviz/axesAndPC.rviz" />
    </group>

</launch>
